<h1 class="text-center mt-4">Listing All Articles</h1>
<% @articles.each do |a| %>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    by Christopher Hachey
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to a.title, article_path(a), class: "text-success" %></h5>
                    <p class="card-text"><%= truncate(a.description, length: 100) %></p>
                    <%= link_to "View", article_path(a), class: "btn btn-outline-success" %>
                    <%= link_to "Edit", edit_article_path(a), class: "btn btn-outline-info" %>
                    <%= link_to "Delete", article_path(a), class: "btn btn-outline-danger" %>
                </div>
                <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(a.created_at) %> ago</small>
                    <small>Updated <%= time_ago_in_words(a.updated_at) %> ago</small>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>