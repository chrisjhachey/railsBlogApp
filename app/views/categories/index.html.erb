<h1 class="text-center mt-4">Listing All Categories</h1>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>
<% @categories.each do |c| %>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-4 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-body">
                    <h5 class="card-title"><%= link_to c.name, category_path(c), class: "text-success" %></h5>
                    <p class="card-text"><%= pluralize(c.articles.count, "article") %></p>
                </div>
                <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(c.created_at) %> ago</small>
                    <small>Updated <%= time_ago_in_words(c.updated_at) %> ago</small>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>